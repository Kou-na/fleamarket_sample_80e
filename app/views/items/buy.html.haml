.buy-main 
  .buy-item-container
    %h2.buy-item-head 購入内容の確認
    .buy-content.buy-item
      .buy-content-inner
        .buy-item-box
          .buy-item-image
            = image_tag('material/icon/icon-01.png', alt: '商品の画像')
          .buy-item-detail
            %p.buy-item-name
              商品名
              %p.buy-item-price.bold
                ¥500
                %span.item-shipping-fee
                  (税込)送料込み
    .buy-content.buy-user-info
      .buy-content-inner
        %ul.buy-price-table
          %li.buy-price-row.buy-you-pay.bold
          %li.buy-price-cell 支払い金額
          %li.buy-price-cell
            -# = number_to_currency(@product.price,format: "%u%n",unit:"¥",precision: 0)
    .buy-content.buy-user-info
      .buy-content-inner
        %h3 支払方法
        .payment-content__creditcards
          = link_to '登録して下さい', buy_items_path, class: 'creditcard'
    .buy-content.buy-user-info
      .buy-content-inner
        %h3 配送先
        .delivery-content__addresses
          = link_to '登録して下さい', buy_items_path, class: 'address'
    .buy-content.buy-user-info
      = submit_tag("購入する", class:"purchase")
        
.exhibit-page__footer
  .exhibit-page__footer__content
    .exhibit-page__footer__content__main
